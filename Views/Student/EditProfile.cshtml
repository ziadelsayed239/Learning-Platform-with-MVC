@model FinalProject.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My E-Learning Platform</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        #sidebarImage {
            width: 100px; /* Circular sidebar image */
            height: 100px;
            border-radius: 50%; /* Circular shape */
            object-fit: cover;
        }

        #imagePreview {
            width: 160px; /* Smaller preview size */
            height: 160px;
            object-fit: cover; /* Maintain aspect ratio */
            display: none; /* Initially hidden */
        }

        .main-content {
            width: 100%;
        }

        .all {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .sidebar {
            width: 18%;
            z-index: 20;
            height: 100vh; /* Full height */
            overflow-y: auto; /* Allow scrolling if the content overflows */
            border-right: 1px solid #ccc;
        }

        .main-content {
            width: 80%;
        }
    </style>
</head>

<body>
    <div class="all">
        @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
        {
            <div id="sidebar" class="sidebar">
                <div class="text-center">
                    <!-- Image preview with delete functionality -->
                    <div style="position: relative; display: inline-block;">
                        <!-- Profile Image Preview -->
                        <img id="sidebarImage" src="@Url.Content(Model.Image_URL)" alt="Profile Image Preview" class="my-2" style="max-width: 150px; display: @(Model.Image_URL != null ? "block" : "none");" />

                        <!-- Form for deleting the image -->
                        @if (Model.Image_URL != null)
                        {
                            <form id="deleteImageForm" method="post" action="@Url.Action("DeleteProfileImage", "Student")" style="display:inline;">
                                

                                <button type="submit" class="btn btn-danger" style="position: absolute; top: 0; right: 0;" onclick="return confirm('Are you sure you want to delete your profile image?');">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        }
                    </div>

                    <h2>@Model.UserName</h2>
                    <p>@Model.Email</p>
                    <p>@Model.PhoneNumber</p>
                </div>
                <hr />
                <nav class="nav flex-column">
                    <a class="nav-link" href="@Url.Action("EditProfile", "Student")">Edit Profile</a>
                    <a class="nav-link" href="@Url.Action("Courses", "Student")">My Courses</a>
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
                </nav>
            </div>
        }

        <div class="main-content">
            <h1>@ViewData["Title"]</h1>
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Upload new profile image -->
                <div class="form-group">
                    <label>Profile Image</label>
                    <input type="file" id="imageUpload" name="ProfileImage" accept="image/*" class="form-control" onchange="previewImage(event)" />
                    <!-- Profile image preview after uploading new one -->
                    <img id="imagePreview" src="@Url.Content(Model.Image_URL)" alt="Profile Image Preview" class="my-2" style="max-width: 150px;" />
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
                <a href="@Url.Action("Profile", "Student")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    // Display the uploaded image preview
                    document.getElementById('imagePreview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block'; // Show the image preview
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
</body>
</html>