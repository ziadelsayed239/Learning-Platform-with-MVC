@model FinalProject.Models.Course

<div class="container py-5">
<div class="course-video">
    <h2>@Model.Title</h2>
    <div class="video-container">
        <video controls autoplay muted>
            <source src="@Url.Content("~/img/vidoes/" + @Model.VideoURL)" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
</div>
<br />
    <p>@Model.Description</p>

<!-- Add Feedback Form Section -->
<div class="feedback-form">
    <h3>Add Your Feedback</h3>
    <form asp-action="AddFeedback" asp-controller="Student" method="post">
        <input type="hidden" name="courseId" value="@Model.Id" />
        <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea name="comment" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label for="rating">Rating (1-5):</label>
            <input type="number" name="rating" class="form-control" min="1" max="5" required />
        </div>
        <button type="submit" class="btn btn-primary">Add Feedback</button>
    </form>
</div>
</div>
</div>
<!-- Custom Styling -->
<style>
    body {
        font-family: 'Arial', sans-serif;
    }

    .course-container {
        max-width: 900px;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .course-detail {
        padding: 20px;
        background-color: #fafafa;
        border-radius: 8px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
    }

    .course-title {
        font-size: 2rem;
        color: #333;
        margin-bottom: 10px;
    }

    .course-description {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 10px;
    }

    .course-price {
        color: #28a745;
        font-weight: bold;
    }

    .course-category {
        color: #007bff;
    }

    video{
        width:100%;
    }

</style>


