@model FinalProject.ViewModel.AdminVm
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet"
          href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/admin.css" />
    <style>
        .all{
            min-height:100vh;
        }
    </style>
</head>
<body>

        <header>
            <h1>Admin Panel</h1>
        </header>
        <div class="container all py-5">
            <div class="admin-info">
                <div class="data">
                    <div class="info">
                        <img src="img/@Model.Image"
                             alt="Admin Photo"
                             width="150"
                             height="150" />
                        <div class="content">
                            <strong><p>Name:</strong> @Model.Name</p>
                            <strong> <p>Email:</strong> @Model.Email</p>
                            <strong> <p>Phone: </strong>@Model.Phone</p>
                        </div>
                    </div>
                    <div class="icon">
                        <input type="text" placeholder="Search" />
                        <a href="/Admin/AssignRole"><button class="btn">AssignRole</button></a>
                       @*  <a href="/Admin/Courses"><button>Add Courses</button></a> *@
                    </div>
                </div>
            </div>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Email</th>
                    <th></th>
                    <th></th>

                </tr>
                @foreach (var item in ViewBag.student)
                {
                    <tr>
                        <td class="col">@item.Name</td>
                        <td>@item.phone</td>
                        <td>@item.Email</td>
                        <td><a  href="/Admin/Delete/@item.Id"><button class="btn">Delete</button></a> </td>
                        <td><a href="/Admin/Edit/@item.Id"><button>Edit</button></a> </td>

                    </tr>
                }

            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>

