<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-5">
                    <div class="section-title mb-5 d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Course Detail</h6>
                            <h1 class="display-4">@Model.Title</h1>
                        </div>
                        <div class="flex-shrink-0 ml-4">
                            <img class="img-fluid rounded w-100" style="max-width: 200px;" src="~/img/@Model.ImageURL" alt="Course Image">
                        </div>
                    </div>
                    <p class="p-2">@Model.Description</p>
                </div>
            </div>

            <div class="col-lg-4 mt-5 mt-lg-0">
                <div class="bg-primary mb-5 py-3">
                    <h3 class="text-white py-3 px-4 m-0">Course Features</h3>

                    <div class="d-flex justify-content-between border-bottom px-4">
                        <h6 class="text-white my-3">Price</h6>
                        <h6 class="text-white my-3">@Model.Price</h6>
                    </div>

                    <div class="d-flex justify-content-between border-bottom px-4">
                        <h6 class="text-white my-3">Duration</h6>
                        <h6 class="text-white my-3">@Model.DurationTime Hrs</h6>
                    </div>

                    <div class="d-flex justify-content-between px-4">
                        <h6 class="text-white my-3">Language</h6>
                        <h6 class="text-white my-3">@Model.Title</h6>
                    </div>

                    <h5 class="text-white py-3 px-4 m-0">Course Price: @Model.Price EGP</h5>

                    <div class="py-3 px-4">
                        <h6 class="text-danger text-center">You should login to enroll in the course</h6>
                        <a class="btn btn-block btn-secondary py-3 px-5" asp-controller="Account" asp-action="Login" asp-route-courseId="@ViewBag.CourseId">Enroll Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>